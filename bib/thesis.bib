journal = {bioRxiv},
month = {sep},
pages = {430744},
publisher = {Cold Spring Harbor Laboratory},
title = {{Ratio-based sensing of two transcription factors regulates the transit to differentiation}},
url = {https://www.biorxiv.org/content/10.1101/430744v1},
