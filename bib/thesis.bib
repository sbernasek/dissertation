issn = {00166731},
journal = {Genetics},
number = {2},
pages = {633--649},
pmid = {23172856},
title = {{The relationship between long-range chromatin occupancy and polymerization of the drosophila ETS family transcriptional repressor Yan}},
volume = {193},
year = {2013}
}
