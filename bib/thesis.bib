doi = {10.1186/1471-2105-11-372},
file = {:Users/Sebi/Library/Application Support/Mendeley Desktop/Downloaded/Helmuth, Paul, Sbalzarini - 2010 - Beyond co-localization inferring spatial interactions between sub-cellular structures from microscopy.pdf:pdf},
